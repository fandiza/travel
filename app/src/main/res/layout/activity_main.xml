<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#020B11"
    >


    <ImageView
        android:id="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bg_app_tiga"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/indonesia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INDONESIA"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/pulauseribu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PULAU SERIBU"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/indonesia"
        android:textSize="26sp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/btnplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pulauseribu"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#9B9797"
        app:layout_constraintTop_toBottomOf="@+id/gambar"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        />

    <TextView
        android:id="@+id/paragraf1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Green bridge from Seatle is really awesome to get the hot spot for traveller who is traveling right there with their families."
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/deskripsi"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/paragraf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simply dummy text something is nice but you have to aware about the branding of the product itself so keep it happy and make it more fancy."
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/paragraf1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/btnbuy"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/paragraf2"
        android:layout_marginTop="20dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>